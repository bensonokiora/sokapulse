{
  "name": "sokapulse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && npm run update-sitemaps",
    "build:purge": "next build && node purge-css.js && npm run update-sitemaps",
    "start": "next start",
    "lint": "next lint",
    "build:no-cache": "NEXT_DISABLE_CACHE=1 next build",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --view --preset=mobile",
    "audit": "npm run build:purge && npm run start & sleep 5 && npm run lighthouse && kill $!",
    "analyze": "ANALYZE=true next build",
    "update-country-sitemap": "node scripts/update-country-sitemap.js",
    "update-sitemaps": "node scripts/update-sitemaps.js",
    "security:audit": "npm audit --production",
    "security:lint": "npm run lint",
    "security:check": "node scripts/security-check.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@lottiefiles/dotlottie-react": "^0.13.0",
    "@popperjs/core": "^2.11.8",
    "axios": "^1.7.2",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "next": "^15.2.3",
    "next-remove-imports": "^1.0.12",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-paystack": "^4.0.3",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@next/bundle-analyzer": "^15.2.3",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.6",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "glob": "^10.3.10",
    "lighthouse": "^12.4.0",
    "postcss": "^8",
    "postcss-purgecss": "^5.0.0",
    "purgecss": "^5.0.0",
    "tailwindcss": "^3.4.1"
  }
}
